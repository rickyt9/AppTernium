@page
@using Newtonsoft.Json.Linq;
@model LeaderboardPracticaModel
@{
}

<div class="container d-flex align-items-center justify-content-between mt-5 mb-4">
    <div class="btn-group btn-group-toggle mode-buttons">
        <a class="btn btn-inactive btn-left btn-leaderboard" asp-area="" asp-page="/Leaderboard">
            <span class="pl-2">EXAMEN</span>
        </a>
        <a class="btn btn-active btn-right btn-leaderboard" asp-area="" asp-page="/LeaderboardPractica">
            <span class="pl-2">PRÁCTICA</span>
        </a>
    </div>

    <h1 class="display-4 leaderboard-text">LEADERBOARD</h1>

    <form class="form-group mb-0" method="post" asp-page-handler="MyMethod">
        <select id="myDrpDown" name="myDrpDown" class="form-control rounded-pill time-select" asp-for="selectedFilter" onchange="this.form.submit();">
            <option selected disabled hidden>Elige Tiempo</option>
            <option value="S">SEMANAL</option>
            <option value="M">MENSUAL</option>
            <option value="G">GLOBAL</option>
        </select>
    </form>

</div>

<div class="table text-dark">
    <table class="table table-hover table-striped">
        <thead class="thead-dark text-center">
            <tr class="">
                <th class="px-4">Rango</th>
                <th class="">Username</th>
                <th class="px-4">Puntuación</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @{
                int counter = 1;
                foreach (var item in Model.ListaScore)
                {
                    <tr>
                        <td>
                            @if (counter == 1)
                            {
                                <span class="medalla-oro"></span>
                            }
                            else if (counter == 2)
                            {
                                <span class="medalla-plata"></span>
                            }
                            else if (counter == 3)
                            {
                                <span class="medalla-bronze"></span>
                            }
                            else
                            {
                                @counter
                            }
                        </td>
                        <td>
                            @item.username
                        </td>
                        <td>
                            @item.score
                        </td>
                    </tr>
                counter = counter + 1;
                }

            }
        </tbody>
    </table>
</div>
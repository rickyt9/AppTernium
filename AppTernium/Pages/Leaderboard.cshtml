    <div class="btn-group"  role="group" aria-label="Filter of leaderboard">
        <button type="button" class="btn btn-inactive btn-left btn-leaderboard font-weight-bold">EXAMEN</button>
        <button type="button" class="btn btn-active btn-right btn-leaderboard font-weight-bold">PRÁCTICA</button>

@page
@model LeaderboardModel
@{
}

<div class="container d-flex align-items-center justify-content-between mt-5 mb-4">
    <div class="btn-group btn-group-toggle">
        <button type="button" class="btn btn-inactive btn-left btn-leaderboard font-weight-bold">EXAMEN</button>
        <button type="button" class="btn btn-active btn-right btn-leaderboard font-weight-bold">PRÁCTICA</button>
    </div>

    <h1 class="display-4 font-weight-bolder">TABLA DE CLASIFICACIÓN</h1>

    <select class="form-select" onchange="parentNode.submit();" aria-label="Default select example">
        <option selected>SEMANAL</option>
        <option value="1">MENSUAL</option>
        <option value="2">GLOBAL</option>
    </select>

    <div class="btn-group">
        <button type="button" class="btn btn-outline-dark btn-leaderboard dropdown-toggle rounded-pill font-weight-bold" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
            SEMANAL
        </button>

        <div class="dropdown-menu">
            <a class="dropdown-item" href="#">Semanal</a>
            <a class="dropdown-item" href="#">Mensual</a>
            <a class="dropdown-item" href="#">Global</a>
        </div>
    </div>

</div>

<div class="table text-dark">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>@Model.responseGet</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
</div>